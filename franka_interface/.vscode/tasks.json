{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "catkin build",
			"type": "shell",
			"icon": {
				"color": "terminal.ansiRed",
				"id": "wrench"
			},
			"runOptions": {
				"instanceLimit": 1
			},
			"command": "cd ${workspaceFolder} && catkin build --this --cmake-args -DCMAKE_BUILD_TYPE=Debug",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "catkin build test pkg",
			"type": "shell",
			"icon": {
				"color": "terminal.ansiBlue",
				"id": "wrench"
			},
			"runOptions": {
				"instanceLimit": 1
			},
			"command": "cd ${workspaceFolder} && catkin build franka_example_pkg --cmake-args -DCMAKE_BUILD_TYPE=Debug",
			"problemMatcher": []
		},
		{
			"label": "roslaunch sim",
			"type": "shell",
			"command": "source ../../../devel/setup.bash && roslaunch franka_interface sim.launch",
			"problemMatcher": [],
			"dependsOn": [
				"catkin build test pkg"
			],
			"icon": {
				"color": "terminal.ansiGreen",
				"id": "run-all"
			}
		},
		{
			"label": "tf echo",
			"type": "shell",
			"command": "source ../../../devel/setup.bash && rosrun tf tf_echo ${input:parent_frame} ${input:child_frame}",
			"icon": {
				"color": "terminal.ansiYellow",
				"id": "globe"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "rqt",
			"type": "shell",
			"command": "source ../../../devel/setup.bash && rqt",
			"icon": {
				"color": "terminal.ansiYellow",
				"id": "globe"
			},
			"problemMatcher": [],
			"runOptions": {
				"instanceLimit": 1
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"clear": true
			}
		}
	],
	"inputs": [
		{
			"id": "parent_frame",
			"description": "parent tf frame",
			"type": "promptString"
		},
		{
			"id": "child_frame",
			"description": "child tf frame",
			"type": "promptString"
		}
	]
}